<?xml version="1.0" encoding="UTF-8"?>
<phpunit
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.3/phpunit.xsd"
     backupGlobals="true"
     backupStaticAttributes="false"
     cacheTokens="false"
     colors="true"
     convertErrorsToExceptions="true"
     convertNoticesToExceptions="true"
     convertWarningsToExceptions="true"
     forceCoversAnnotation="false"
     processIsolation="false"
     stopOnError="false"
     stopOnFailure="false"
     stopOnIncomplete="false"
     stopOnSkipped="false"
     verbose="true">
    <!--
        The section below lists the selenium test files in the order they are to be
        run.  New test files are added here as to test the functionality of your
        application as it is developed.
    -->
    <testsuite name="webtemplate selenium tests">
        <file>../tests/selenium/HomePageTest.php</file>
        <file>../tests/selenium/UserprefTest.php</file>
        <file>../tests/selenium/AdminMainTest.php</file>
        <file>../tests/selenium/AdminAboutTest.php</file>
        <file>../tests/selenium/AdminPreferencesTest.php</file>
        <file>../tests/selenium/AdminParametersTest.php</file>
        <file>../tests/selenium/AdminParametersSettingsTest.php</file>
        <file>../tests/selenium/AdminParametersPolicyTest.php</file>
        <file>../tests/selenium/AdminParametersAuthenticationTest.php</file>
        <file>../tests/selenium/AdminParametersMailTest.php</file>
        <file>../tests/selenium/AdminUsersTest.php</file>
        <file>../tests/selenium/AdminGroupsTest.php</file>
        <file>../tests/selenium/SecurityTest.php</file>
        <file>../tests/selenium/RegisterTest.php</file>
    </testsuite>
    <!--
        The section below allows the setting of environment variables to control the
        operation of the selenium server.  The can also be set using the bash
        terminal export command
    -->
    <!--
    <php>
        <env name="SELHOST" value="localhost"/>
        <env name="SELPORT" value="4444"/>
        <env name="SELBROWSER" value="htmlunit"/>
        <env name="SELMAXIMISE" value="false"/>
    </php>
    -->
    <logging>
      <log type="junit" target="logs/selenium.xml"/>
    </logging>
</phpunit>
