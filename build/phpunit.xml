<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/6.3/phpunit.xsd"
    backupGlobals="true"
    backupStaticAttributes="false"
    cacheTokens="false"
    colors="false"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    forceCoversAnnotation="false"
    mapTestClassNameToCoveredClassName="false"

    processIsolation="false"
    stopOnError="false"
    stopOnFailure="false"
    stopOnIncomplete="false"
    stopOnSkipped="false"

    verbose="false">
    <testsuites>
        <testsuite name="unit">
            <directory suffix=".php">../tests/blank</directory>
            <directory suffix=".php">../tests/db</directory>
            <directory suffix=".php">../tests/config</directory>
            <directory suffix=".php">../tests/general</directory>
            <directory suffix=".php">../tests/application</directory>
            <directory suffix=".php">../tests/install</directory>
            <directory suffix=".php">../tests/admin</directory>
            <directory suffix=".php">../tests/groups</directory>
            <directory suffix=".php">../tests/users</directory>
            <directory suffix=".php">../tests/rest</directory>
        </testsuite>
        <testsuite name="unit2">
            <directory suffix=".php">../tests/config</directory>
        </testsuite>

        <testsuite name="functional">
            <file>../tests/selenium/homepage.classTest.php</file>
            <file>../tests/selenium/userpref.classTest.php</file>
            <file>../tests/selenium/adminMain.classTest.php</file>
            <file>../tests/selenium/adminAbout.classTest.php</file>
            <file>../tests/selenium/adminPreferences.classTest.php</file>
            <file>../tests/selenium/adminParameters.classTest.php</file>
            <file>../tests/selenium/adminParametersSettings.classTest.php</file>
            <file>../tests/selenium/adminParametersPolicy.classTest.php</file>
            <file>../tests/selenium/adminParametersAuthentication.classTest.php</file>
            <file>../tests/selenium/adminParametersMail.classTest.php</file>
            <file>../tests/selenium/adminUsers.classTest.php</file>
            <file>../tests/selenium/adminGroups.classTest.php</file>
            <file>../tests/selenium/security.classTest.php</file>
            <file>../tests/selenium/register.classTest.php</file>
            <file>../tests/selenium/passwdReset.classTest.php</file>
        </testsuite>

    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">../includes</directory>
            <exclude>
                <directory>../tests/_data</directory>
                <directory>../tests/logs</directory>
                <file>../includes/general/header.php</file>
            </exclude>
        </whitelist>
    </filter>
    <php>
        <var name="unittest" value="true" />
    </php>
    <logging>
      <log type="coverage-html" target="coverage" title="Webtemplate"
            charset="UTF-8" yui="true" highlight="true"/>
      <log type="coverage-clover" target="logs/clover.xml"/>
      <log type="coverage-crap4j" target="logs/crap4j.xml"/>
      <log type="coverage-xml" target="logs/coverage/xml"/>
      <log type="junit" target="logs/junit.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>
